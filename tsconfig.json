{
    "compilerOptions": {
        "outDir": "dist/",
        "noImplicitAny": true,
        "module": "esnext",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": "./",
        "paths": {
            "@/static/*": [
                "public/static/*"
            ],
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src",
        "index.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}